server {
	server_name main;
	listen 8080;
	host localhost;
	root /home/rtimsina/Desktop/cursu_working/11_webserv/webserv_17.03;
	index index.html;
	client_max_body_size 10M;
	error_page 404 ./hey.html;

	location / {
		allow_methods GET;
		autoindex on;
	}

	location /upload {
		allow_methods GET DELETE;
		try_file file.html;
	}

	location .php {
		allow_methods GET POST DELETE;
		cgi_path /cgi;
		cgi_ext .php;
		upload_to /upload;
	}

	location /favicon.ico {
		allow_methods GET;
	}

	location /redirect {
		allow_methods GET;
		return /index.html;
	}
}
